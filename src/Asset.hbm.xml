<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="project.Asset" table="asset">
      <meta attribute="class-description">
         This class contains the asset details; 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="branch" column="branch" type="string"/>
      <property name="assetTag" column="asset_tag" type="string"/>
      <property name="assetType" column="asset_type" type="string"/>
      <property name="status" column="status" type="int"/>
      <property name="model" column="model" type="string"/>
      <property name="serialNumber" column="serial_number" type="string"/>
      <property name="purchaseOrder" column="purchase_order" type="string"/>
      <property name="unitCost" column="unit_cost" type="string"/>
      <property name="location" column="location" type="string"/>
      <property name="building" column="building" type="string"/>
      <property name="roomNumber" column="room_number" type="string"/>
      <property name="softwareOs" column="software_os" type="boolean"/>
      <property name="description" column="description" type="string"/>
      <property name="scanDate" column="scan_date" type="date"/>
   </class>
</hibernate-mapping>